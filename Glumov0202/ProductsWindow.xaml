<Window x:Class="Glumov0202.ProductsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вся предлагаемая продукция"
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ЗАГОЛОВОК -->
        <StackPanel Grid.Row="0"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,15"
                    Background="#0C4882"
                    Width="850">
            <TextBlock Text="ПРОДУКЦИЯ"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="White"
                       TextAlignment="Center"
                       Padding="10"/>
        </StackPanel>

        <!-- ТАБЛИЦА ПРОДУКЦИИ -->
        <DataGrid x:Name="ProductsDataGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  HeadersVisibility="Column"
                  BorderThickness="1"
                  BorderBrush="#CCCCCC"
                  Margin="0">

            <DataGrid.Columns>

                <!-- название -->
                <DataGridTextColumn Header="Наименование"
                                    Binding="{Binding Name}"
                                    Width="*"/>

                <!-- артикул -->
                <DataGridTextColumn Header="Артикул"
                                    Binding="{Binding Article}"
                                    Width="100"/>

                <!-- склад -->
                <DataGridTextColumn Header="Количество на складе"
                                    Binding="{Binding StockCount}"
                                    Width="140"/>

                <!-- минимальная стоимость -->
                <DataGridTextColumn Header="Минимальная стоимость"
                                    Binding="{Binding MinimalCost, StringFormat={}{0:N2} руб.}"
                                    Width="140"/>

                <!-- тип продукции -->
                <DataGridTextColumn Header="Тип продукции"
                                    Binding="{Binding ProductTypeName}"
                                    Width="150"/>

                <!-- коэффициент типа -->
                <DataGridTextColumn Header="Коэффициент типа"
                                    Binding="{Binding ProductTypeFactor, StringFormat={}{0:F2}}"
                                    Width="120"/>

            </DataGrid.Columns>
        </DataGrid>

        <!-- КНОПКИ ДЕЙСТВИЙ -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,15,0,0">

            <!-- Кнопка расчета материалов -->
            <Button x:Name="CalculateMaterialsButton"
                    Content="Рассчитать материалы для выбранной продукции"
                    Click="CalculateMaterialsButton_Click"
                    Padding="15,10"
                    Margin="0,0,10,0"
                    Background="#0C4882"
                    Foreground="White"
                    FontWeight="Bold"
                    Width="320"/>

            <!-- Кнопка закрытия -->
            <Button x:Name="CloseButton"
                    Content="Закрыть"
                    Click="CloseButton_Click"
                    Padding="15,10"
                    Background="#0C4882"
                    Foreground="White"
                    FontWeight="Bold"
                    Width="120"/>

        </StackPanel>

    </Grid>
</Window>
