<Window x:Class="Glumov0202.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Система управления заявками партнеров"
        Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <!-- ШАПКА -->
        <Border Grid.Row="0" Background="#0C4882">
            <DockPanel Margin="15,0">
                <!-- Логотип -->
                <Image Source="/images/logo.png"
                       Width="116" Height="61"
                       Margin="0,0,15,0"
                       DockPanel.Dock="Left"/>

                <!-- Заголовок -->
                <TextBlock Text="ЗАЯВКИ ПАРТНЕРОВ"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center"/>
            </DockPanel>
        </Border>

        <!-- СПИСОК ЗАЯВОК -->
        <ScrollViewer Grid.Row="1" Margin="15" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="RequestsListBox">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>

                        <!-- Карточка заявки -->
                        <Border Padding="15" Margin="0,0,0,12"
                                BorderBrush="#0C4882"
                                BorderThickness="1"
                                CornerRadius="6"
                                MouseLeftButtonDown="PartnerItem_MouseLeftButtonDown">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="150"/>
                                </Grid.ColumnDefinitions>

                                <!-- информация о партнёре -->
                                <StackPanel Grid.Column="0">

                                    <!-- Тип и имя партнера -->
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                        <TextBlock Text="{Binding PartnerType}"
                                                   FontSize="15" FontWeight="Bold"/>
                                        <TextBlock Text=" | "
                                                   Margin="5,0" FontSize="14"/>
                                        <TextBlock Text="{Binding PartnerName}"
                                                   FontSize="15" FontWeight="Bold"/>
                                    </StackPanel>

                                    <!-- Адрес, телефон, рейтинг -->
                                    <TextBlock Text="{Binding Address}" FontSize="13"/>
                                    <TextBlock Text="{Binding Phone}" FontSize="13" Margin="0,3,0,0"/>
                                    <TextBlock Text="{Binding RatingText}" FontSize="13"
                                               FontWeight="SemiBold" Margin="0,3,0,0"/>
                                </StackPanel>

                                <!-- Стоимость заявки -->
                                <Border Grid.Column="1"
                                        Padding="10"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Right"
                                        Width="140">
                                    <TextBlock Text="{Binding TotalCost, StringFormat={}{0:N2} руб.}"
                                               FontWeight="Bold"
                                               FontSize="14"
                                               TextAlignment="Center"/>
                                </Border>
                            </Grid>

                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- КНОПКИ СНИЗУ -->
        <Grid Grid.Row="2" Background="White">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">

                <!-- Кнопка управления заявками -->
                <Button x:Name="AddPartnerButton"
                        Content="Управление заявками"
                        Click="AddPartnerButton_Click"
                        Padding="20,10"
                        FontWeight="Bold"
                        Background="#0C4882"
                        Foreground="White"
                        BorderThickness="0"
                        Margin="0,0,15,0"
                        Width="180"
                        Height="40"
                        Cursor="Hand"/>

                <!-- Кнопка перехода в каталог продукции -->
                <Button x:Name="ViewProductsButton"
                        Content="Каталог продукции"
                        Click="ViewProductsButton_Click"
                        Padding="20,10"
                        FontWeight="Bold"
                        Background="#0C4882"
                        Foreground="White"
                        BorderThickness="0"
                        Width="180"
                        Height="40"
                        Cursor="Hand"/>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
