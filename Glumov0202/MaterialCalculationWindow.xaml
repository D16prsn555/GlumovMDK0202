<Window x:Class="Glumov0202.MaterialCalculationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Расчет материалов"
        Height="500" Width="450"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок окна -->
        <TextBlock Grid.Row="0"
                   Text="РАСЧЕТ МАТЕРИАЛОВ"
                   FontSize="16"
                   FontWeight="Bold"
                   Foreground="#0C4882"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Подпись "Продукция" -->
        <TextBlock Grid.Row="1"
                   Text="Продукция:"
                   FontWeight="SemiBold"
                   Margin="0,0,0,5"/>

        <!-- Вывод названия продукции -->
        <TextBlock Grid.Row="2"
                   x:Name="ProductNameTextBlock"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <!-- Подпись к количеству -->
        <TextBlock Grid.Row="3"
                   Text="Требуемое количество:"
                   FontWeight="SemiBold"
                   Margin="0,0,0,5"/>

        <!-- Поле ввода количества -->
        <TextBox Grid.Row="4"
                 x:Name="RequiredCountTextBox"
                 Padding="8"
                 Margin="0,0,0,20"
                 Height="30"/>

        <!-- Подпись к параметру 1 -->
        <TextBlock Grid.Row="5"
                   Text="Параметр 1:"
                   FontWeight="SemiBold"
                   Margin="0,0,0,5"/>

        <!-- Поле ввода параметра 1 -->
        <TextBox Grid.Row="6"
                 x:Name="Param1TextBox"
                 Padding="8"
                 Margin="0,0,0,20"
                 Height="30"/>

        <!-- Подпись к параметру 2 -->
        <TextBlock Grid.Row="7"
                   Text="Параметр 2:"
                   FontWeight="SemiBold"
                   Margin="0,0,0,5"/>

        <!-- Поле ввода параметра 2 -->
        <TextBox Grid.Row="8"
                 x:Name="Param2TextBox"
                 Padding="8"
                 Margin="0,0,0,20"
                 Height="30"/>

        <!-- Блок отображения результата -->
        <Border Grid.Row="9"
                Background="#BBDCFA"
                CornerRadius="6"
                Padding="15"
                Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Результат расчета:"
                           FontWeight="Bold"
                           Margin="0,0,0,5"/>
                <TextBlock x:Name="ResultTextBlock"
                           FontWeight="Bold"
                           FontSize="14"/>
            </StackPanel>
        </Border>

        <!-- Панель кнопок -->
        <StackPanel Grid.Row="10"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">

            <!-- Кнопка расчета -->
            <Button x:Name="CalculateButton"
                    Content="Рассчитать"
                    Click="CalculateButton_Click"
                    Padding="25,12"
                    FontWeight="Bold"
                    Margin="0,0,15,0"
                    Background="#0C4882"
                    Foreground="White"/>

            <!-- Кнопка закрытия -->
            <Button x:Name="CloseButton"
                    Content="Закрыть"
                    Click="CloseButton_Click"
                    Padding="25,12"
                    FontWeight="Bold"
                    Background="#0C4882"
                    Foreground="White"/>
        </StackPanel>

    </Grid>
</Window>
